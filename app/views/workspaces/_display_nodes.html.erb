<p id="notice"><%= notice %></p>

<h2> Nodes </h2>
<p>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Show All
  </button>
</p>

<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Workspace</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @nodes.each do |node| %>
          <% if(node.workspace_id == @workspace.id) %>
            <tr>
              <td><%= node.name %></td>
              <td><%= node.description %></td>
              <td><%= node.workspace_id %></td>
              <td><%= link_to 'Edit', edit_node_path(@workspace.id, node) %></td>
              <td><%= link_to 'Destroy', destroy_node_path(@workspace.id, node), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Node', new_node_path(@workspace) %>
  </div>
</div>

